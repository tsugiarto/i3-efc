<div class="site-content admin-site-content">
  <div class="inner">

    <div class="main admin-main" role="main" itemscope itemprop="mainContentOfPage" itemtype="http://schema.org/Blog">
      <div class="wrapper">

        <div class="admin-page">
          <div class="login-container">
            <div class="heading">
              <div class="inner">
                <img src="assets/images/bg-archive.svg">
                <h2>Hello, please login to continue</h2>
              </div>
            </div>
            <div class="login-form">
              <form class="form">
                <div class="form-text">
                  <div class="form-label">
                    <label for="login-email" class="label">Email</label>
                  </div>
                  <div class="form-input">
                    <input type="email" id="login-email" class="input">
                  </div>
                </div>
                <div class="form-text">
                  <div class="form-label">
                    <label for="login-password" class="label">Password</label>
                  </div>
                  <div class="form-input">
                    <input type="password" id="login-password" class="input">
                  </div>
                </div>
                <div class="form-text">
                  <div class="form-label"></div>
                  <div class="form-input">
                    <button class="button button-login">Login</button>
                    <a href="admin-forget-password.html" class="forget-password-link">Forget Password</a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- @import designby -->

      </div>
    </div>

  </div>
</div>

